<div class="well">
  <%= link_to new_department_path, remote: true, class: 'btn btn-primary btn-no-padding' do %>
   <span class="btn-label">
			<span class="fa  fa-plus"></span>
        </span>
      Adauga
  <% end %>
</div>

<div class="table-responsive">

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Denumire</th>
      <th></th>
    </tr>
    </thead>
    <tbody class="session-index">

    <% @departments.each do |dep| %>
        <tr>
          <td>
            <%= dep.name %>
          </td>
          <td>
            <%= link_to '', edit_department_path(dep), remote: true, class: 'btn glyphicon glyphicon-edit' %>
            <%= link_to '', department_delete_path(dep.id), remote: true, class: 'btn glyphicon glyphicon-trash' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
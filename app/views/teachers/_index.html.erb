<div class="well">
  <%= link_to new_teacher_path, remote: true, class: 'btn btn-primary btn-no-padding' do %>
        <span class="btn-label">
			<span class="fa  fa-plus"></span>
        </span>
      Adauga
  <% end %>
  <%= link_to teacher_import_from_app_path(0), action: :get, remote: true, class: 'btn btn-primary btn-no-padding' do %>
        <span class="btn-label">
			<span class="fa fa-upload"></span>
        </span>
      Importa de la autentificare
  <% end %>
  <%= link_to teacher_import_path(0), action: :get, remote: true, class: 'btn btn-primary btn-no-padding' do %>
        <span class="btn-label">
			<span class="fa fa-upload"></span>
        </span>
      Importa
  <% end %>
  <%= link_to teacher_download_path(0), action: :get, class: 'btn btn-primary btn-no-padding' do %>
        <span class="btn-label">
			<span class="fa fa-download"></span>
        </span>
      Descarca (CSV)
  <% end %>
</div>

<!--<div class="table-responsive"> -->
  <div id="main" role="main" class="block">

  <table id="example"  class="table table-striped table-hover" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Nume</th>
      <th>Prenume</th>
      <th>Email</th>
      <th></th>
    </tr>
    </thead>
    <tbody class="session-index">

    <% @teachers.each do |teacher| %>
        <tr>
          <td>
            <%= teacher.last_name %>
          </td>
          <td>
            <%= teacher.first_name %>
          </td>
          <td>
            <%= teacher.email %>
          </td>
          <td>
            <%= link_to '', edit_teacher_path(teacher), remote: true, class: 'btn glyphicon glyphicon-edit' %>
            <%= link_to '', teacher_delete_path(teacher.id), remote: true, class: 'btn glyphicon glyphicon-trash' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

<script>
    $(document).ready(function() {

        $('#example').DataTable();
    } );
</script>
<%= form_for @cohort, remote: true, html: {class: "form-horizontal", style: "display:inline;"} do |f| %>
    <div class="modal-body">
      <div class="panel-body">
        <div class=" has-error errors">
        </div>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary" for="start_period">Denumire:</label>

          <div class="col-lg-7">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary" for="start_period">An Terminal:</label>

          <div class="col-lg-7">
            <%= f.select(:is_terminal, [['NU', false], ['DA', true]], {selected: @cohort.is_terminal, include_blank: true}, {class: 'form-control'}) %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary" for="start_period">Numar studenti:</label>

          <div class="col-lg-7">
            <%= f.text_field :students_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary" for="start_period">Numar optionale:</label>

          <div class="col-lg-7">
            <%= f.text_field :optionals_number, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-5 control-label text-primary">Departament:</label>

          <div class="col-lg-7">
            <%= f.select :department_id, Department.all.collect { |p| [p.name, p.id] }, {selected: @cohort.department_id, include_blank: true}, class: 'form-control  col-xs-9' %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Salveaza', class: "btn btn-primary" %>
      <%= link_to "Cancel", '', class: "btn btn-default", data: {dismiss: "modal"} %>
    </div>
<% end %>
<div class="well">
  <%= link_to new_activity_path, remote: true, class: 'btn btn-primary' do %>
    <br>
   <span class="btn-label">
			<span class="fa  fa-plus"></span>
        </span>

    Adauga
    <br>   <br>
<% end %>


  <%= link_to activity_deleteall_path(:activity_id => 0, :semester => 1), remote: true, class: 'btn btn-danger btn-no-padding' do %>
   Sterge toate activitatile care <br> nu sunt de tipul "CURS" <br> Semestrul 1
  <% end %>

  <%= link_to activity_deleteall_path(:activity_id => 0, :semester => 2), remote: true, class: 'btn btn-danger btn-no-padding'  do %>
    Sterge toate activitatile care <br> nu sunt de tipul "CURS" <br>  Semestrul 2
  <% end %>

</div>
<div role="tabpanel">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#sem1" aria-controls="home" role="tab" data-toggle="tab">Semestrul 1 </a>
    </li>
    <li role="presentation">
      <a href="#sem2" aria-controls="profile" role="tab" data-toggle="tab">Semestrul 2</a>
    </li>
  </ul>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="sem1">
      <div class="sem1-index">
        <div class="table-responsive">

          <table id='activities1' class="table table-striped table-hover"cellspacing="0" width="100%">
            <thead>
            <tr>
             <!-- <th></th>-->
              <th>Materie</th>
              <th>Profesor</th>
              <th>Grupa</th>
              <th>Semestru</th>
              <th>Tip</th>
              <th>Optional</th>
              <th></th>
            </tr>
            </thead>
            <tbody class="session-index">

            <% @activities1.each do |activity| %>
                <tr>
                 <!-- <td><%= check_box_tag '', activity.id, false, class: 'delete_multiple_checkbox', name: "activities[]" %></td>-->
                  <td>
                    <%= activity.course.title %>
                  </td>
                  <td>
                    <%= activity.teacher.last_name %> <%= activity.teacher.first_name %>
                  </td>
                  <td>
                    <%= activity.cohort.name %>
                  </td>
                  <td>
                    <%= activity.semester %>
                  </td>
                  <td>
                    <%= activity.activity_type %>
                  </td>
                  <td>
                    <% if activity.is_optional == true %> DA
                    <% else %> NU
                    <% end %>

                  </td>

                  <td>
                    <%= link_to '', edit_activity_path(activity), remote: true, class: 'btn glyphicon glyphicon-edit' %>
                    <%= link_to '', activity_delete_path(activity.id), remote: true, class: 'btn glyphicon glyphicon-trash' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <br>
      </div>

    </div>
    <div role="tabpanel" class="tab-pane " id="sem2">
      <div class="sem1-index">
        <div class="table-responsive">

          <table id='activities2' class="table table-striped table-hover"cellspacing="0" width="100%">
            <thead>
            <tr>
              <th>Materie</th>
              <th>Profesor</th>
              <th>Grupa</th>
              <th>Semestru</th>
              <th>Tip</th>
              <th>Optional</th>
              <th></th>
            </tr>
            </thead>
            <tbody class="session-index">

            <% @activities2.each do |activity| %>
                <tr>
                  <td>
                    <%= activity.course.title %>
                  </td>
                  <td>
                    <%= activity.teacher.last_name %> <%= activity.teacher.first_name %>
                  </td>
                  <td>
                    <%= activity.cohort.name %>
                  </td>
                  <td>
                    <%= activity.semester %>
                  </td>
                  <td>
                    <%= activity.activity_type %>
                  </td>
                  <td>
                    <% if activity.is_optional == true %> DA
                    <% else %> NU
                    <% end %>

                  </td>

                  <td>
                    <%= link_to '', edit_activity_path(activity), remote: true, class: 'btn glyphicon glyphicon-edit' %>
                    <%= link_to '', activity_delete_path(activity.id), remote: true, class: 'btn glyphicon glyphicon-trash' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>


<script>
    $(document).ready(function() {

        $('#activities1').DataTable();
        $('#activities2').DataTable();
    } );
</script>
<div class="modal-header">

  <%= link_to '&times;'.html_safe, '', class: 'close', data: {dismiss: "modal"} %>
  <h3> Importa Materii </h3>
</div>
<%= form_tag course_import_path(0), method: :post, remote: true, html: {class: "form-horizontal", style: "display:inline;"} do %>
    <div class="modal-body">
      <div class="panel-body">
        <div class=" has-error errors">
        </div>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="alert alert-info"> Pentru a adauga mai multe materii scrie mai jos continutul unui CSV (de forma
            Titlu, Cod de identificare, Departament)
          </div>
        </div>
        <div class="form-group">
          <%= text_area_tag :csv, '', class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= submit_tag 'Salveaza', class: "btn btn-primary" %>
      <%= link_to "Cancel", '', class: "btn btn-default", data: {dismiss: "modal"} %>
    </div>
<% end %>
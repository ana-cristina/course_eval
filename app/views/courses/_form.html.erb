<%= form_for @course, remote: true, html: {class: "form-horizontal", style: "display:inline;"} do |f| %>
    <div class="modal-body">
      <div class="panel-body">
        <div class=" has-error errors">
        </div>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary" for="start_period">Denumire:</label>

          <div class="col-lg-7">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary">Departament:</label>

          <div class="col-lg-7">
            <%= f.select :department_id, Department.all.collect { |p| [p.name, p.id] }, {selected: @course.department_id, include_blank: true}, class: 'form-control  col-xs-9' %>
          </div>
        </div>
       <!-- <div class="form-group">
          <div class="alert alert-info">Codul unic de identificare este format din numarul domeniului, numarul
            programului de studiu, an, semestru si numarul disciplinei din planul de invatamant.
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label text-primary" for="start_period">Cod unic de identificare al
            materiei:</label>

          <div class="col-lg-7">
            <%= f.text_field :uid, class: 'form-control' %>
          </div>
        </div>-->
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", '', class: "btn btn-default", data: {dismiss: "modal"} %>
    </div>
<% end %>